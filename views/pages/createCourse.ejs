          <div class="card-body">
            <div class="card-text">

              <!-- Form contents -->
              <div class="form-group">
                <label for="courseCodeInput"> Course Code </label>
                <input type="text" class="form-control" id="courseCodeInput" aria-describedby="courseCode" placeholder="Enter the course code ex. MA2203-09">
